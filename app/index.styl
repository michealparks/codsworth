html
  font-size: 12px
  font-weight: 200

body, .bg-image
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  
body
  display: flex
  justify-content: center
  align-items: center
  margin: 0
  overflow: hidden
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
  background-color: black
  color: #fff
  
.bg-image
  background-size: cover
  background-position: center
  opacity: 0.5
  
#bg-1
  opacity: 0
  transition: 600ms
  
.bg-image--active
  opacity: 0.5 !important

.centerpiece
  position: relative
  cursor: default
  width: 300px
  text-align: center
  perspective: 300px
  
  *
    user-select: none

.time
  padding: 0
  font-size: 80px
  
.date
  font-size: 20px
  border-bottom: 1px solid #ccc
  padding: 0 0 20px

.text
  position: absolute
  bottom: 10px
  width: 400px
  left: calc(50% - 200px)
  
  *
    color: rgba(255,255,255,0.85) !important
    font-weight: 200
    
  b
    font-style: italic
    
.weather
  display: flex
  align-items: center
  justify-content: center
  padding: 15px 0
  
.weather__icon,
.weather__icon svg
  height: 40px
  width: 40px
  
.weather__icon
  margin: 0 16px
  
.weather__temp
  display: flex
  font-size: 40px
  
.weather__unit
  height: 32px
  
.animate-in
  animation-name: animate-in
  animation-duration: 600ms
  animation-iteration-count: 1
  animation-fill-mode: forwards
  animation-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000)
  opacity: 0
  transform-origin: 50% 0
  transform: translate3d(0, 0, 0)
  
.date
  animation-delay: 150ms
  
.weather
  animation-delay: 300ms
  
.text
  animation-delay: 450ms
  
@keyframes animate-in
  from
    opacity: 0
    transform: translate3d(0, 30px, 20px)
  to
    opacity: 1
    transform: translate3d(0, 0, 0)
  
