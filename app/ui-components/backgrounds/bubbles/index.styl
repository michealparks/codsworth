random(min, max)
  return math(math(0, 'random') * (max - min + 1) + min, 'floor')

#background-bubbles
  z-index: -1
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: #333
  overflow: hidden
  
.background-bubbles-bubble
  position: absolute
  border-radius: 100%
  animation-timing-function: ease-in-out
  animation-direction: alternate
  animation-iteration-count: infinite

  for i in (0..100)
    size = unit(random(0, 100), 'px')
    o = random(0, 4) / 10
    
    &:nth-child({i})
      width: size
      height: size
      left: unit(random(0, 99), 'vw')
      top: unit(random(0, 99), 'vh')
      background-color: hue(skyblue, random(0, 2 * i))
      opacity: o
      animation-name: move + random(0, 4), pulse
      animation-duration: unit(random(14000, 16000), 'ms')
  
@keyframes pulse
  100%
    opacity: 0.1

@keyframes move1
  0%
    transform: none 
  100%  
    transform: translate(-5vh, 5vw, 0px) 


@keyframes move2
  0%
    transform: none 
  100%
    transform: translate3d(5vh, -5vw, 0px) 


@keyframes move3
  0% 
    transform: none 
  100%   
    transform: translate3d(5vh, 5vw, 0px) 


@keyframes move4
  0% 
    transform: none 
  100%
    opacity: 0.1
    transform: translate3d(-5vh, -5vw, 0px)
  
