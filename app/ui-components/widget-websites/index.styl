.widget-websites
  width: 400px
  margin: 20px auto
  display: flex
  
.widget-websites__website
  margin-right: 10px

.widget-websites__icon
  width: 60px
  height: 60px
  
btnSize = 60px
lineWidth = 2px
midpoint = btnSize/2 - lineWidth/2
.widget-websites__btn-add
  position: relative
  width: btnSize
  height: btnSize
  border: 0
  background-color: transparent
  
.widget-websites__btn-add-vertline
.widget-websites__btn-add-horizline
  position: absolute
  background-color: #fff
  
  width: 10px
  height: 10px
  left: 25px
  top: 25px
  border-radius: 100%
  transition: 200ms
  
.widget-websites__btn-add:hover
  
  .widget-websites__btn-add-vertline
  .widget-websites__btn-add-horizline
    border-radius: 0
  
  iconSize = btnSize - 30px
  .widget-websites__btn-add-vertline
    left: midpoint
    top: 15px
    height: iconSize
    width: lineWidth
    
  .widget-websites__btn-add-horizline
    left: 15px
    top: midpoint
    height: lineWidth
    width: iconSize
    