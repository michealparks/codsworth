.app
  display: flex
  align-items: center
  align-content: center
  justify-content: center
  overflow: hidden
  color: #fff
  
.app > *:not(.settings)
  transition: 400ms
  transform: scale(1.0) translate3d(0, 0, 0)
  
.state-settings .app > *:not(.settings)
  transform: scale(0.7) translate3d(0, 0, 0)
  