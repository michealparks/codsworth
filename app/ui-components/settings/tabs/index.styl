.settings-tab__header
.settings-tab__option
  user-select: none
  display: flex
  align-items: center
  justify-content: space-between
  
.settings-tab__header
  border-bottom: 1px solid #ccc
  
.react-toggle-container
.settings-tab__title
  padding: 15px 20px
  
.settings-tab__title
  margin: 0
  font-size: 16px
  font-weight: 300
  
.settings-tab__content
  background-color: #ccc
  color: #333
  
.settings-tab__option
  padding: 15px 0
  margin: 0 20px
  
  &:not(:last-child)
    border-bottom: 1px solid #bbb
    
  .react-toggle-container
    padding: 0
  